{
    "mongodb_uri": "mongodb://localhost:27017/",
    "mongodb_db": "hidrs",
    "raw_data_collection": "raw_data",
    "elasticsearch_hosts": ["http://localhost:9200"],
    "es_index": "hidrs_data",
    "es_index_settings": {
        "mappings": {
            "properties": {
                "url": {"type": "keyword"},
                "title": {"type": "text"},
                "content": {"type": "text"},
                "crawl_time": {"type": "date"}
            }
        }
    },
    "collections_to_backup": ["raw_data", "port_scans"],
    "backup_path": "./data/backups",
    "backup_interval": 86400,  
    "sync_interval": 300       
}